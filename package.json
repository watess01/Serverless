    "serverless-offline": "^13.1.2",
    "serverless-offline-lambda": "^1.0.6",
    "serverless-webpack": "^5.13.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "webpack-node-externals": "^3.0.0"
  },
